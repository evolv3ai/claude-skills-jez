{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "tenancy_ocid",
    "user_ocid",
    "region",
    "fingerprint",
    "private_key_path"
  ],
  "properties": {
    "tenancy_ocid": {
      "type": "string",
      "description": "OCI tenancy OCID",
      "sensitive": true
    },
    "user_ocid": {
      "type": "string",
      "description": "OCI user OCID",
      "sensitive": true
    },
    "region": {
      "type": "string",
      "description": "OCI region (e.g., us-ashburn-1)",
      "default": "us-ashburn-1"
    },
    "fingerprint": {
      "type": "string",
      "description": "API key fingerprint",
      "sensitive": true
    },
    "private_key_path": {
      "type": "string",
      "description": "Path to OCI API private key",
      "default": "~/.oci/oci_api_key.pem",
      "sensitive": true
    },
    "compartment_name": {
      "type": "string",
      "description": "Name for OCI compartment",
      "default": "coolify-compartment"
    },
    "vcn_cidr": {
      "type": "string",
      "description": "CIDR block for VCN",
      "default": "10.0.0.0/16"
    },
    "subnet_cidr": {
      "type": "string",
      "description": "CIDR block for subnet",
      "default": "10.0.1.0/24"
    },
    "instance_shape": {
      "type": "string",
      "description": "OCI instance shape",
      "default": "VM.Standard.A1.Flex"
    },
    "instance_ocpus": {
      "type": "integer",
      "description": "Number of OCPUs",
      "default": 2,
      "minimum": 1,
      "maximum": 4
    },
    "instance_memory_gb": {
      "type": "integer",
      "description": "Memory in GB",
      "default": 12,
      "minimum": 1,
      "maximum": 24
    },
    "ssh_public_key_path": {
      "type": "string",
      "description": "Path to SSH public key",
      "default": "~/.ssh/id_rsa.pub"
    },
    "ssh_private_key_path": {
      "type": "string",
      "description": "Path to SSH private key",
      "default": "~/.ssh/id_rsa",
      "sensitive": true
    },
    "ssh_user": {
      "type": "string",
      "description": "SSH username",
      "default": "ubuntu"
    },
    "service_type": {
      "type": "string",
      "description": "Service to deploy (coolify, kasm, or both)",
      "enum": ["coolify", "kasm", "both"],
      "default": "coolify"
    }
  }
}
