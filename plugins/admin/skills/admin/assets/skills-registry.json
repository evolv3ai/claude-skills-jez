  "installMethods": {
    "plugin": {
      "description": "Install via Claude Code plugin marketplace",
      "command": "/plugin install {bundle}@{marketplace}",
      "pros": [
        "Auto-updates",
        "Bundle management",
        "Agent discovery"
      ],
      "cons": [
        "Requires marketplace setup"
      ]
    },
    "symlink": {
      "description": "Symlink skill directory to ~/.claude/skills/",
      "command": "ln -s {source} ~/.claude/skills/{name}",
      "pros": [
        "Direct editing",
        "Immediate changes"
      ],
      "cons": [
        "Manual management",
        "No auto-updates"
      ]
    },
    "copy": {
      "description": "Copy skill files to target location",
      "command": "cp -r {source} {target}",
      "pros": [
        "Works everywhere",
        "No dependencies"
      ],
      "cons": [
        "Manual updates",
        "Version drift"
      ]
    },
    "rules-file": {
      "description": "Export skill content to rules file format",
      "command": "cat {skill}/SKILL.md >> {target}/.cursorrules",
      "pros": [
        "Works with Cursor/Windsurf"
      ],
      "cons": [
        "Loses structure",
        "Manual updates"
      ]
    }
  },
